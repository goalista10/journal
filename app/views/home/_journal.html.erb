<%=current_user.email%>
<%=current_user.categories%>

<table class="table table-hover align-middle">
  <thead>
    <tr>
      <th>categories</th>
      <th>User ID</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.user_id %></td>
        <td><%= link_to 'Edit', edit_category_path(category.id),class:"btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Destroy', category_path(category.id), method: :delete, data: { confirm: 'Are you sure?' } ,class:"btn btn-danger btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h1>Add Category</h1>
<%= form_with model: [current_user,current_user.categories.build], url: categories_path ,local: true do |form| %>
  <div class="mb-3">
    <%= form.label :name ,class:"form-label"%>
    <%= form.text_field :name , class:"form-control"%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>